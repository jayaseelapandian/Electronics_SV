~timescale 1ns/1ps

class IfElseDemo;
  rand int a, b;

  constraint c {
    if (a < 10)
      b inside {0, 1, 2};  
    else
      b inside {10, 20, 30};
  }
endclass

module test;
  initial begin
    IfElseDemo obj = new();
    repeat(6) begin
      obj.randomize();
      $display("a = %0d, b = %0d", obj.a, obj.b);
    end
  end
endmodule
